macro(WZ_TARGET_CONFIGURATION _TARGETNAME)
	if(WZ_TARGET_ADDITIONAL_PROPERTIES)
		SET_TARGET_PROPERTIES(${_TARGETNAME} PROPERTIES ${WZ_TARGET_ADDITIONAL_PROPERTIES})
	endif()
	if(WZ_TARGET_ADDITIONAL_C_BUILD_FLAGS)
		target_compile_options(${_TARGETNAME} PRIVATE "$<$<COMPILE_LANGUAGE:C>:${WZ_TARGET_ADDITIONAL_C_BUILD_FLAGS}>")
	endif()
	if(WZ_TARGET_ADDITIONAL_CXX_BUILD_FLAGS)
		target_compile_options(${_TARGETNAME} PRIVATE "$<$<COMPILE_LANGUAGE:CXX>:${WZ_TARGET_ADDITIONAL_CXX_BUILD_FLAGS}>")
	endif()
endmacro(WZ_TARGET_CONFIGURATION)
